{
    "extends": ["tslint:latest", "tslint-react"],
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "quotemark": {
          "options": [
            "single",
            "avoid-escape",
            "jsx-double"
          ]
        },
        "no-implicit-dependencies": [true, "dev"],
        "no-unused-expression": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        }
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    },
    "rulesDirectory": [
      "node_modules/tslint-eslint-rules/dist/rules"
    ]
}
